{{!
    @template enrol_authorizedotnetpro/enrol_page

    Contents of the enrolment widget on the course enrolment page

    Example context (json):
    {
        "cost": "10.00",
        "currency": "USD",
        "coursename": "Course Name",
        "instanceid": "1"
    }
}}
<div class="authorizedotnet-paymentcontainer">
    <div class="authorizedotnet-currencybox">
        <span class="currencyselected">
            {{currency}} {{cost}}
        </span>
    </div>

    <div class="authorizedotnet-item">
        <div class="authorizedotnet-itemtitle">{{coursename}}</div>
        <div class="authorizedotnet-itemprice">{{currency}} {{cost}}</div>
    </div>
    <p class="authorizedotnet-itemsubtitle">{{coursename}}</p>

    <div class="authorizedotnet-line"></div>

    <div class="authorizedotnet-subtotal">
        <span>{{# str }} enrolnow, enrol_authorizedotnetpro {{/ str }}</span>
        <span id="subtotalamount-{{instanceid}}">{{currency}} {{cost}}</span>
    </div>

    <div class="authorizedotnet-total" id="total-{{instanceid}}">
        <strong>{{# str }} totaldue, enrol_authorizedotnetpro {{/ str }}</strong>
        <strong id="totalamount-{{instanceid}}">{{currency}} {{cost}}</strong>
    </div>

    <div id="paymentresponse-{{instanceid}}" class="authorizedotnet-error-message authorizedotnet-hidden"></div>

    <div id="enrollmentbutton-{{instanceid}}">
        <button id="enrolbutton-{{instanceid}}" class="btn btn-primary">
            {{# str }} enrolnow, enrol_authorizedotnetpro {{/ str }}
        </button>
    </div>
</div>